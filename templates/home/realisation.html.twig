<section class="pt-8 pt-md-11">
    <div class="container p-3">
        <div class="row">
            <div class="col-12">
            <h2 class="mb-0">
                Les dernière réalisations
            </h2>
        </div>
        <div class="row">
            {% for peinture in peintures %}
            <div class="col-4">
                <div class="card p-3" style="width: 18rem;">
                    <img src="{{peinture.file}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{peinture.nom}}</h5>
                        <p class="card-text">{{peinture.description|u.truncate(150,'...',false)}}</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>

                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>