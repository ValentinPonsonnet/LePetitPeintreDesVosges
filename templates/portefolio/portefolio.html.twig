{% extends 'base.html.twig' %}

{% block title %}Portefolio{% endblock %}

{% block body %}
<section>
    <div class="container">
        <div class="row">
            {% for categorie in categories %}
                {% set img = categorie.peintures|last %}
                <div class="col-4">
                    <a href=" {{path ("portefolio_categorie", {"slug": categorie.slug} )}}">
                        <div class="card mb-3" style="width: 18rem;">
                            <img src="{{img.file}}" class="card-img-top" alt="...">
                    </a>
                            <div class="card-body">
                                <h5 class="card-title">{{categorie.nom}}</h5>
                                <p class="card-text">{{categorie.description}}</p>
                            </div>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
