{% extends 'base.html.twig' %}

{% block title %}Réalisation{% endblock %}

{% block body %}

<section class="pt-8 pt-md-11">
    <div class="container p-3">
        <div class="row">
            <div class="col-12">
            <h2 class="mb-0">
                Les dernière réalisations
            </h2>
        </div>
        <div class="row">
            {% for peinture in peintures %}
            <div class="col-4">
                <div class="card mb-3" style="width: 18rem;">
                    <a href="{{path ('realisation_detail', {"slug": peinture.slug}) }}" class="card-img-top">
                    <img src="{{peinture.file}}" class="card-img-top" alt="...">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">{{peinture.nom}}</h5>
                        <p class="card-text">{{peinture.description|u.truncate(150,'...',false)}}</p>
                        <p> Réaliser le : {{peinture.daterealisation |date("d/m/Y")}}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="d-flex justify-content-center">
        {% do peintures.setPageRange(2) %}
        {{ knp_pagination_render(peintures, 'base/paginator.html.twig')}}
    </div>
</section>



{% endblock %}
