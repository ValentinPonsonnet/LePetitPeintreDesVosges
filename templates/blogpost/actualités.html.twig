{% extends 'base.html.twig' %}

{% block title %}Actualité{% endblock %}

{% block body %}

    <section class="pt-8 pt-md-11">
    <div class="container p-3">
        <div class="row">
            <div class="col-12 col-md-7">
            <h2 class="mb-0">
                Les dernière réalisations
            </h2>
        </div>
        <div class="row">
            {% for blogpost in blogposts %}
            <div class="col-4">
                <div class="card mb-3" style="width: 18rem;">
                    <a href="{{ path ('blogpost_detail', {"slug" : blogpost.slug} )}}">
                    <div class="card-body">
                        <h5 class="card-title">{{blogpost.titre}}</h5>
                        <p class="card-text">{{blogpost.contenu|u.truncate(150,'...',false)}}</p>
                    </a>
                        <p> Ecrit le : {{blogpost.date|date("d/m/Y")}}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="d-flex justify-content-center">
        {% do blogposts.setPageRange(2) %}
        {{ knp_pagination_render(blogposts, 'base/paginator.html.twig')}}
        
    </div>
</section>

{% endblock %}
